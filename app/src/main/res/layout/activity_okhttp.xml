<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="getBtnName"
            type="String"/>
        <variable
            name="postBtnName"
            type="String"/>
        <variable
            name="uploadBtnName"
            type="String"/>
        <variable
            name="downloadBtnName"
            type="String"/>

        <variable
            name="getResult"
            type="String"/>
        <variable
            name="postResult"
            type="String"/>
        <variable
            name="uploadResult"
            type="String"/>
        <variable
            name="downloadResult"
            type="String"/>

        <variable
            name="progressTip"
            type="String"/>

        <variable
            name="progressContainerVisible"
            type="Integer"/>

        <variable
            name="btnClick"
            type="liwei.com.okhttp.OkhttpActivity"/>
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/button_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/get_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{getBtnName}"
                android:onClick="@{btnClick::getBtnClick}"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/post_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{postBtnName}"
                android:onClick="@{btnClick::postBtnClick}"
                android:layout_weight="1"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="@{btnClick::uploadBtnClick}"
                android:text="@{uploadBtnName}"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="@{btnClick::downloadBtnClick}"
                android:text="@{downloadBtnName}"/>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_container"
            android:layout_marginTop="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/get_result"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:text="@{getResult}"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/post_result"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@{postResult}"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="5dp"
                    android:text="@{uploadResult}"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{downloadResult}"/>
                    <ImageView
                        android:id="@+id/img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:contentDescription="@null"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:visibility="@{progressContainerVisible}"
            android:gravity="center">
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/progressBarStyleSmall"  />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:textColor="#ff0000"
                android:text="@{progressTip}"/>
        </LinearLayout>
    </RelativeLayout>
</layout>