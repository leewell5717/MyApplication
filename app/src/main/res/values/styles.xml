<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Customize picker mode here. -->
        <item name="mdtp_theme_dark">true</item>
    </style>

    <style name="ActivityTurnStyle" parent="@android:style/Theme.Holo.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="CustomActivityOnCrashTheme" parent="android:Theme.Light" tools:ignore="ResourceName" />

    <!-- 对话框样式 -->
    <style name="MyDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>
    <style name="MyDialog2" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>
    <style name="MyDialog_NoMask" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <!--对话框弹出动画1  左右-->
    <style name="MyAnim1" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/right_to_left</item>
        <item name="android:windowExitAnimation">@anim/left_to_right</item>
    </style>
    <!--对话框弹出动画2  上下-->
    <style name="MyAnim2" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/down_to_up</item>
        <item name="android:windowExitAnimation">@anim/up_to_down</item>
    </style>

    <!--MaterialIconLib布局样式-->
    <style name="ToolbarTheme" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="materialIconColor">@color/somecolor</item>
    </style>

    <!--pickview pop样式-->
    <style name="FadeInPopWin">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="@android:windowEnterAnimation">@anim/pop_win_content_fade_in</item>
        <item name="@android:windowExitAnimation">@anim/pop_win_content_fade_out</item>
    </style>
</resources>
